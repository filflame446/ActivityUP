            </tr>
            <tr>
                <% data.forEach(function(data){%>
                    <td>
                        <%=data.ActivityName %>
                    </td>
                    <td>
                        <%=new Date(data.startTime).toLocaleString(); %> -
                            <%=new Date(data.endTime).toLocaleString(); %>
                    </td>
                    <td>
                        <%=data.place %>
                    </td>
                    <td>
                        <%=data.score %>
                    </td>
                    <td>
                        <%=data.count %>
                            <a class='button' href="/listweing/<%=data.ActivityName%>">รายชื่อผู้เข้าร่วม</a> </td>
                    <td><a class='button' href=" /update/<%=data.No%>">แก้ไขกิจกรรม</a>
                    </td>
                    <td>
                        <form method="post" action="/delete/<%= data.No %>">
                            <%if(data.count>0){%>
                                <button class='buttonblock' type="button" onclick="return alert('กิจกรรมมีผู้เข้าร่่วมแล้วไม่สามารถลบรายการได้');">ลบกิจกรรม</button>
